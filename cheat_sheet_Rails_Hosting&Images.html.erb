<!-- Create app on Heroku -->
- In terminal
  heroku create $YOUR_APP_NAME --region eu

<!-- Logs of app in production -->
- In terminal
  Heroku logs --tails

<!-- Run pending migrations in your production environment -->
- In terminal
  heroku run rails db:migrate

<!-- Active Storage migration installation commands -->
- In terminal
  rails active_storage:install # copies the migration files
  rails db:migrate

<!-- Push all secret variables to Heroku -->
- In terminal
  heroku config:set VARIABLE_NAME=value123
  example heroku config:set CLOUDINARY_URL=cloudinary://298522699261255:Qa1ZfO4syfbOC-***********************8

<!-- Open your website in your browser from your terminal -->
- In terminal
  heroku open

<!-- Connect to Heroku account from your terminal -->
